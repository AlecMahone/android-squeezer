<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                 android:key="first_preferencescreen">

  <CheckBoxPreference
     android:key="squeezer.autodiscover"
     android:title="Auto-discover server"
     android:summary="NOTDONE Auto-scan for the squeeze server."
     android:persistent="true" />

   <EditTextPreference
     android:key="squeezer.serveraddr"
     android:title="@string/settings_serveraddr_title"
     android:summary="@string/settings_serveraddr_summary"
     android:persistent="true" />

   <com.danga.squeezer.IntEditTextPreference
     android:key="squeezer.maxrows"
     android:title="@string/settings_maxrows_title"
     android:summary="@string/settings_maxrows_summary"
     android:numeric="integer"
     android:maxLength="4" />

  <CheckBoxPreference
     android:key="squeezer.autoconnect"
     android:title="Auto-connect"
     android:summary="On Wifi availability, try to connect."
     android:persistent="true" />

  <CheckBoxPreference
     android:key="squeezer.notifyofconnection"
     android:title="Notify of Connection"
     android:summary="Show notification while connected, even when not playing music."
     android:persistent="true" />

  <CheckBoxPreference
     android:key="squeezer.debuglogging"
     android:title="Debug Logging"
     android:summary="Keep this off, unless you're debugging something."
     android:persistent="true" />
</PreferenceScreen>
